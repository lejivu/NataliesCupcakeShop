@using NataliesCupcakeShop.Data.Entities
@model List<UserContract>
  
<h1 class="bg-info text-white">All Users</h1>
  <a asp-action="Edit" class="btn btn-secondary">Create a User</a>
<table class="table table-sm table-bordered table-bordered">
    <tr>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Email</th>
        <th>Country</th>
        <th>Zip Code</th>
        <th>Date of Birth</th>
        <th>Create Date</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.FirstName</td>
            <td>@role.LastName</td>
            <td>@role.Email</td>
            <td>@role.Country</td>
            <td>@role.ZipCode</td>
            <td>@role.DateOfBirth</td>
            <td>@role.CreateDate</td>
                        <td><a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@role.Id">Edit</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.Id" method="post">
                    <button id="DeleteButton" type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>

        </tr>
    }
</table>
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>

<script>
    $(document).on('ready', function () {
        $(document).on('submit', "form", function (e) {
            
            if(!confirm("Are you sure you want to delete this user?")) {
                e.preventDefault();
                return;
            }
        });
    });
</script>
